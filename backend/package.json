{
  "name": "verytippers-backend",
  "version": "1.0.0",
  "description": "Backend server for VeryTippers - Social tipping bot for Very Network",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "jest",
    "migrate:generate": "typeorm-ts-node-esm migration:generate -d src/config/database.ts",
    "migrate:run": "typeorm-ts-node-esm migration:run -d src/config/database.ts",
    "migrate:revert": "typeorm-ts-node-esm migration:revert -d src/config/database.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^7.1.3",
    "dotenv": "^16.0.3",
    "ethers": "^6.7.0",
    "axios": "^1.4.0",
    "typeorm": "^0.3.17",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "ioredis": "^5.3.2",
    "cron": "^2.3.0",
    "jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.1.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.4",
    "tsx": "^4.19.1",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.2.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcrypt": "^5.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  }
}

