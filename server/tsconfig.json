{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": false,
    "noImplicitAny": false,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["../client/src/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
